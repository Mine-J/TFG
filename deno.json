{
  "workspace": [
    "./apps/web",
    "./packages/shared",
    "./packages/database"
  ],
  "tasks": {
    "dev": "cd apps/web && deno task start",
    "dev:api": "cd apps/api && deno task start",
    "build": "cd apps/web && deno task build",
    "preview": "cd apps/web && deno task preview",
    "check": "deno fmt --check && deno lint",
    "fmt": "deno fmt",
    "migrate": "deno run -A scripts/migrate.ts",
    "seed": "deno run -A scripts/seed.ts",
    "setup": "deno run -A scripts/setup.ts"
  },
  "lint": {
    "rules": {
      "tags": ["fresh", "recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "imports": {
    "@shared/": "./packages/shared/",
    "@db/": "./packages/database/",
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "preact-render-to-string": "https://esm.sh/preact-render-to-string@6.3.1?deps=preact@10.22.0",
    "@preact/signals": "https://esm.sh/@preact/signals@1.2.2?deps=preact@10.22.0",
    "@preact/signals-core": "https://esm.sh/@preact/signals-core@1.5.1",
    "$std/": "https://deno.land/std@0.216.0/",
    "hono/": "https://deno.land/x/hono@v4.0.0/",
    "postgres": "https://deno.land/x/postgres@v0.19.3/mod.ts"
  },
  "exclude": [
    "**/_fresh/*",
    "**/node_modules",
    "**/.env"
  ]
}